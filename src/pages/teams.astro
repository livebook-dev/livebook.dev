---
import { Image } from "astro:assets";

import Layout from "../layouts/Layout.astro";

import Icon from "../components/Icon.astro";
import Card from "../components/TeamsCard.astro";
import DatabaseCard from "../components/TeamsDatabaseCard.astro";
import PlayButton from "../components/TeamsPlayButton.astro";
import VideoModal from "../components/VideoModal.astro";
import TeamsFeatureList from "../components/TeamsFeatureList.astro";
import TeamsFeatureItem from "../components/TeamsFeatureItem.astro";
import TeamsImageFrame from "../components/TeamsImageFrame.astro";
import TeamsUseCaseSection from "../components/TeamsUseCaseSection.astro";
import TeamsFeatureHighlight from "../components/TeamsFeatureHighlight.astro";

import starIcon from "../images/teams/star-icon.svg";
import plusIcon from "../images/teams/plus-icon.svg";
import elixirLogo from "../images/teams/elixir-logo.svg";
import hexLibrary from "../images/teams/feature-hex-library.svg";
import callFunction from "../images/teams/feature-call-function.svg";
import authentication from "../images/teams/authentication.png";
import sso from "../images/teams/sso.png";
import auditLogs from "../images/teams/audit-logs.png";
import formsAndInputs from "../images/teams/forms-and-inputs.svg";
import dataTables from "../images/teams/data-tables.svg";
import chartOne from "../images/teams/chart-one.svg";
import chartTwo from "../images/teams/chart-two.svg";
import mapsOne from "../images/teams/maps-one.svg";
import mapsTwo from "../images/teams/maps-two.svg";
import amazonDatabase from "../images/teams/amazon-database.svg";
import microsoftDatabase from "../images/teams/microsoft-database.svg";
import mysqlDatabase from "../images/teams/mysql-database.svg";
import postgresDatabase from "../images/teams/postgres-database.svg";
import googleDatabase from "../images/teams/google-database.svg";
import snowflakeDatabase from "../images/teams/snowflake-database.svg";
import sqliteDatabase from "../images/teams/sqlite-database.svg";
import readDataSQL from "../images/teams/read-data-sql.svg";
import readDataLocal from "../images/teams/read-data-local.svg";
import josePhoto from "../images/teams/jose-photo.jpg";
import deployWithTeams from "../images/teams/how-to-deploy-livebook-app-with-livebook-teams.png";
---

<Layout title="Teams" isDarkMode={true} displaySponsors={false} variant="teams">
  <section id="intro" class="bg-gray-900 overflow-x-hidden relative">
    <div
      class="bg-gradient-to-b from-gray-900 to-gray-600 rounded-b-[60px] flex flex-col justify-center items-center"
    >
      <div class="m-auto max-w-7xl px-4 pt-12 sm:pt-24 pb-52 sm:pb-60">
        <div class="flex flex-col space-y-6 md:space-y-10 items-center">
          <h1
            class="max-w-3xl text-2xl/tight sm:text-4xl/tight font-semibold text-gray-50 text-center"
          >
            Ship internal tools fast. <br />
            Operate production with control.
          </h1>
          <span
            class="sm:text-lg text-center font-light text-gray-200 max-w-xl"
          >
            With Livebook Teams, deploy notebooks as internal apps, and turn
            Livebook into a controlled environment for runbooks and production
            operations.
          </span>
          <div class="space-y-4 md:space-y-0 md:flex md:gap-10 text-center">
            <a
              class="button-cta button-pink plausible-event-name=teams+signup+main+cta+click drop-shadow-[0_15px_25px_rgba(228,76,117,0.5)] hover:drop-shadow-[0_15px_25px_rgba(0,0,0,0.5)]"
              href="https://teams.livebook.dev"
            >
              <Icon icon="rocket-line" class="text-xl" />
              <span class="px-2 font-semibold">Try it free for 30 days</span>
            </a>
            <button
              class="button-cta button-outlined gap-4 px-5 inline-flex plausible-event-name=watch+demo+cta+click open-videomodal"
              data-videomodal="1"
            >
              <Icon icon="play-circle-fill" class="text-4xl" />
              <div class="flex flex-col items-start">
                <span class="font-semibold">Watch demo</span>
                <span class="text-sm">7 minutes</span>
              </div>
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="px-4 bg-gray-900">
    <div class="relative max-w-5xl mx-auto">
      <div class="relative top-[-150px] w-full mx-auto z-10">
        <Image
          class="w-full h-auto"
          src={deployWithTeams}
          alt="Feature: Deploy with Livebook Teams"
        />
        <div
          class="absolute top-0 left-0 w-full h-full bg-gray-900/30 rounded-lg sm:rounded-2xl flex justify-center items-center group cursor-pointer open-videomodal plausible-event-name=watch+demo+play+click"
          data-videomodal="1"
        >
          <PlayButton
            videoTitle="Watch José Valim deploying a Livebook app"
            videoLength="7 min"
            videoAuthorImg={josePhoto.src}
          />
        </div>
      </div>
    </div>
  </section>
  <section id="use-cases" class="bg-gray-900 overflow-x-hidden pt-8">
    <div class="mx-auto max-w-6xl p-8 sm:p-12">
      <h1
        class="text-2xl/tight sm:text-3xl/tight md:text-4xl/tight font-semibold text-gray-50 text-center"
      >
        Use cases
      </h1>

      <!-- Internal Tools Section -->
      <TeamsUseCaseSection
        title="Internal tools"
        description="Deploy Livebook notebooks as internal apps — quicker to ship than traditional web apps."
      >
        <Card
          class="bg-gradient-to-br"
          icon="money-dollar-circle-line"
          iconColor="text-blue-600"
          title="Customer refunding"
          description="Enable the support team to refund customers. No need to run that script by yourself anymore."
        />
        <Card
          class="bg-gradient-to-tl"
          icon="database-2-line"
          iconColor="text-green-600"
          title="SQL query viewer"
          description="A web UI where non-technical co-workers can execute and visualize shared SQL queries."
        />
        <Card
          class="bg-gradient-to-br"
          icon="user-add-line"
          iconColor="text-yellow-500"
          title="Onboarding workflow"
          description="Help customer success and operations automate the steps needed when onboarding new customers."
        />
        <Card
          class="bg-gradient-to-tl"
          icon="dashboard-3-line"
          iconColor="text-red-500"
          title="Admin panels"
          description="Enable customer-facing teams to look up user data, extend free trials, and view usage history."
        />
      </TeamsUseCaseSection>

      <!-- Operations Section -->
      <TeamsUseCaseSection
        title="Production operations"
        description="Use a self-hosted Livebook to give engineers a centralized and auditable window into your production system — better than IEx sessions or ad hoc scripts."
      >
        <Card
          class="bg-gradient-to-br"
          icon="tools-line"
          iconColor="text-yellow-500"
          title="Engineering support"
          description="Investigate customer issues using an authenticated self-hosted Livebook."
        />
        <Card
          class="bg-gradient-to-tl"
          icon="file-list-3-line"
          iconColor="text-green-600"
          title="Runbooks"
          description="Interactive runbooks for technical support, DevOps, and solutions engineering."
        />
      </TeamsUseCaseSection>
    </div>
  </section>
  <section id="teams-features" class="bg-gray-900 overflow-x-hidden pt-24">
    <div
      class="bg-gray-200 rounded-t-[40px] sm:rounded-t-[60px] py-16 sm:py-24"
    >
      <div id="teams-features-one" class="m-auto max-w-6xl text-gray-900 px-4">
        <div id="teams-features-title">
          <div class="flex items-center gap-2 sm:gap-5">
            <h3 class="text-xl md:text-2xl font-semibold">Livebook</h3>
            <Image
              src={plusIcon}
              alt="Plus Icon"
              class="w-6 sm:w-8 h-6 sm:h-8"
            />
          </div>
          <h1 class="text-2xl sm:text-3xl md:text-4xl/tight font-semibold mt-2">
            Livebook Teams features
          </h1>
        </div>
        <div id="build-with-elixir" class="mt-8 sm:mt-16">
          <div id="build-with-elixir-title">
            <div class="flex items-center gap-2">
              <h2 class="text-2xl md:text-3xl font-semibold">
                Build with <span class="text-elixir">Elixir</span>
              </h2>
              <Image src={elixirLogo} alt="Elixir Logo" class="w-9 h-9" />
            </div>
            <p class="max-w-xl text-gray-700 mt-3 font-light">
              No-code tools are good for non-technical teams, but as Elixir
              developers, they constrain and even slow us down. With Livebook,
              you get to build what you need using the Elixir tools and packages
              you're familiar with.
            </p>
          </div>
          <div
            id="build-with-elixir-features"
            class="mt-10 space-y-10 lg:space-y-[80px] relative"
          >
            <div id="hex-libraries">
              <div
                class="flex flex-col lg:flex-row lg:items-center justify-between gap-4"
              >
                <div>
                  <div class="flex items-center">
                    <Image src={starIcon} alt="Star Icon" class="w-8 h-8" />
                    <h3 class="text-lg md:text-2xl font-semibold ml-4">
                      Use Hex libraries
                    </h3>
                  </div>
                  <p class="font-light max-w-sm ml-[52px] mt-2 text-gray-700">
                    Livebook is integrated with Hex and uses Mix.install to
                    manage dependencies.
                  </p>
                </div>
                <Image
                  src={hexLibrary}
                  alt="Hex Library"
                  class="lg:mr-12 xl:mr-24 pl-12 lg:pl-0"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="teams-features-two" class="bg-gray-200 pb-6 px-4">
    <div
      class="mx-auto max-w-6xl bg-gray-300 rounded-3xl px-4 lg:px-0 py-10 md:py-16 flex flex-col items-center space-y-6 md:space-y-12"
    >
      <h1 class="text-2xl md:text-4xl font-semibold mt-2">
        An <span class="text-elixir">Elixir</span> library of <br /> UI building
        blocks
      </h1>
      <div class="max-w-3xl mt-4 text-gray-700 font-light text-lg text-center">
        Assemble UIs with zero to minimal need for HTML and CSS. Livebook
        provides UI building blocks you can use by writing Elixir, so you can
        stay in the comfort of the language you love and build UIs faster.
      </div>
      <div id="teams-features-forms-and-input">
        <div class="flex flex-col items-center space-y-5">
          <div class="flex items-center justify-center">
            <Image src={starIcon} alt="Star Icon" class="w-8 h-8" />
            <h3 class="text-lg md:text-2xl font-semibold ml-2 sm:ml-4">
              Forms and inputs
            </h3>
          </div>
          <p class="md:text-lg font-light text-gray-700 text-center">
            Combine various input types like text, dropdowns, and date pickers
            into a form.
          </p>
          <Image
            src={formsAndInputs}
            alt="Forms and Inputs"
            class="w-full h-auto"
          />
        </div>
      </div>
      <div id="teams-features-data-tables">
        <div class="flex flex-col items-center space-y-5">
          <div class="flex items-center justify-center">
            <Image src={starIcon} alt="Star Icon" class="w-8 h-8" />
            <h3 class="text-lg md:text-2xl font-semibold ml-2 sm:ml-4">
              Data tables
            </h3>
          </div>
          <p class="md:text-lg font-light text-gray-700 text-center">
            Easily display, sort, and paginate your data.
          </p>
          <Image src={dataTables} alt="Data Tables" class="w-full h-auto" />
        </div>
      </div>
      <div id="teams-features-chart">
        <div class="flex flex-col items-center space-y-5">
          <div class="flex items-center justify-center">
            <Image src={starIcon} alt="Star Icon" class="w-8 h-8" />
            <h3 class="text-lg md:text-2xl font-semibold ml-2 sm:ml-4">
              Charts
            </h3>
          </div>
          <p class="md:text-lg font-light text-gray-700 text-center">
            Build and visualize charts using Livebook's native integration with
            Vega-Lite.
          </p>
          <div
            class="flex flex-col sm:flex-row gap-6 sm:gap-0 justify-center mt-10"
          >
            <div class="flex flex-col items-center justify-center">
              <Image src={chartOne} alt="Chart Image" class="w-[90%]" />
              <p
                class="font-medium text-sm sm:text-base text-center text-gray-800 mt-2"
              >
                Use the Chart Smart Cell to <br /> generate simple charts
              </p>
            </div>
            <div class="flex flex-col items-center justify-center">
              <Image src={chartTwo} alt="Chart Image" class="w-[90%]" />
              <p
                class="font-medium text-sm sm:text-base text-center text-gray-800 mt-2"
              >
                Use code to build more <br />complex charts
              </p>
            </div>
          </div>
        </div>
      </div>
      <div id="teams-features-maps">
        <div class="flex flex-col items-center">
          <div class="flex items-center justify-center mt-5">
            <Image src={starIcon} alt="Star Icon" class="w-8 h-8" />
            <h3 class="text-lg md:text-2xl font-semibold ml-2 sm:ml-4">Maps</h3>
          </div>
          <p class="text-lg font-light text-gray-700 text-center mt-5">
            Plot objects on a map and visualize geo data using Livebook's native
            integration with MapLibre.
          </p>
          <div
            class="flex flex-col sm:flex-row gap-6 sm:gap-0 justify-center mt-10"
          >
            <div class="flex flex-col items-center justify-center">
              <Image src={mapsOne} alt="Chart Image" class="w-[90%]" />
              <p
                class="font-medium text-sm sm:text-base text-center text-gray-800 mt-2"
              >
                Use the Map Smart Cell to <br /> generate simple maps
              </p>
            </div>
            <div class="flex flex-col items-center justify-center">
              <Image src={mapsTwo} alt="Chart Image" class="w-[90%]" />
              <p
                class="font-medium text-sm sm:text-base text-center text-gray-800 mt-2"
              >
                Use code to build more <br /> complex maps
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="teams-features-three" class="bg-gray-200 pt-6">
    <div class="m-auto max-w-6xl px-4 xl:px-0">
      <div class="relative">
        <div id="read-data-with-easy-title">
          <div class="flex items-center gap-2">
            <h2 class="text-2xl md:text-4xl font-semibold text-gray-900">
              Read data with ease
            </h2>
          </div>
          <p class="max-w-xl text-gray-700 text-lg mt-3 font-light">
            Building dashboards, internal reports, or lightweight business
            intelligence requires consuming data. With Livebook and Elixir,
            that's easy, no matter the data source.
          </p>
        </div>

        <TeamsFeatureList>
          <TeamsFeatureItem
            title="Read data from a SQL database"
            description="Built-in integrations to multiple databases, so you don't need to write boilerplate code to run SQL queries."
            contentPosition="below"
          >
            <div slot="content">
              <div class="grid grid-cols-2 xs:grid-cols-3 lg:grid-cols-4 gap-4">
                <DatabaseCard
                  title="PostgreSQL"
                  imageURL={postgresDatabase.src}
                  integrationId="postgresql"
                />
                <DatabaseCard
                  title="MySQL"
                  imageURL={mysqlDatabase.src}
                  integrationId="mysql"
                />
                <DatabaseCard
                  title="Microsoft SQL Server"
                  imageURL={microsoftDatabase.src}
                  integrationId="sqlserver"
                />
                <DatabaseCard
                  title="SQLite"
                  imageURL={sqliteDatabase.src}
                  integrationId="sqlite"
                />
                <DatabaseCard
                  title="Google BigQuery"
                  imageURL={googleDatabase.src}
                  integrationId="google-bigquery"
                />
                <DatabaseCard
                  title="Amazon Athena"
                  imageURL={amazonDatabase.src}
                  integrationId="amazon-athena"
                />
                <DatabaseCard
                  title="Snowflake"
                  imageURL={snowflakeDatabase.src}
                  integrationId="snowflake"
                />
              </div>

              <div class="mt-10">
                <p class="md:text-lg font-light max-w-md text-gray-700">
                  Write SQL queries directly in Livebook and easily see the
                  result
                </p>

                <Image
                  src={readDataSQL}
                  alt="Livebook notebook showing SQL query execution with database connection and results table displaying queried data"
                />
              </div>
            </div>
          </TeamsFeatureItem>

          <TeamsFeatureItem
            title="Read data from a local or cloud-hosted file"
            description="It doesn't matter if your data is stored as a file in your file system or in a cloud storage service like S3; Livebook handles both ways transparently."
            contentPosition="below"
            isLast={true}
          >
            <Image
              slot="content"
              src={readDataLocal}
              alt="Read data from local"
              class="mx-auto w-full max-w-xl"
            />
          </TeamsFeatureItem>
        </TeamsFeatureList>
      </div>
    </div>
  </section>
  <section id="teams-features-four">
    <div class="px-4 bg-gray-200">
      <div class="bg-gray-200">
        <div class="bg-gray-200 relative">
          <div class="w-full h-full relative top-[125px]">
            <div
              class="mx-auto max-w-6xl bg-gray-300 rounded-3xl px-4 lg:px-0 py-10 md:py-16 flex flex-col items-center space-y-6 md:space-y-12"
            >
              <div id="teams-features-deploy-and-share" class="text-center">
                <h1 class="text-2xl md:text-4xl font-semibold mt-2">
                  Deploy notebooks as apps
                </h1>
                <p class="mt-4 text-gray-700 font-light text-lg">
                  The security of on-premises hosting with the DX of one-click
                  deployment.
                </p>
              </div>
              <div
                id="deploy-and-share-features"
                class="grid grid-cols-1 sm:grid-cols-2 gap-6 sm:gap-14 justify-between"
              >
                <div id="deploy-and-share-self-hosting">
                  <TeamsFeatureHighlight
                    title="Self hosting"
                    description="Run your internal tools on your own infra in less than 10 minutes. One less concern about security and privacy."
                  />
                </div>
                <div id="deploy-and-share-one-click">
                  <TeamsFeatureHighlight
                    title="One-click deploy"
                    description="Deploy internal tools to your own infrastructure with just one click."
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="teams-features-five" class="bg-gray-100">
    <div class="bg-gray-200 rounded-b-[40px] sm:rounded-b-[60px] pt-60 pb-20">
      <div class="m-auto max-w-6xl px-4 xl:px-0">
        <div class="relative">
          <div id="production-access-title">
            <div class="flex items-center gap-2">
              <h2 class="text-2xl md:text-4xl font-semibold text-gray-900">
                Run code against production with confidence
              </h2>
            </div>
            <p class="max-w-xl text-gray-700 text-lg mt-3 font-light">
              Give your team managed, auditable access to production. Livebook
              Teams adds authentication, SSO, and audit trails to your
              self-hosted Livebook—replacing ad hoc terminals and scattered
              scripts.
            </p>
          </div>

          <TeamsFeatureList>
            <TeamsFeatureItem
              title="Integrate with your main Elixir/Phoenix app"
              description="Execute code in your production environment via Erlang distribution. You control what runs in the context of your prod env, and what runs only in your notebook context."
              contentPosition="right"
            >
              <div slot="content" class="rounded-[20px] w-full max-w-lg">
                <Image src={callFunction} alt="Call functions" />
              </div>
            </TeamsFeatureItem>

            <TeamsFeatureItem
              title="Authentication"
              description="Control access to your production-connected Livebook. Users authenticate via Livebook Teams accounts or company email domain"
              contentPosition="right"
            >
              <TeamsImageFrame
                slot="content"
                src={authentication}
                alt="Identity providers configuration interface showing Livebook Teams and Google email domain authentication options"
              />
            </TeamsFeatureItem>

            <TeamsFeatureItem
              title="Single Sign-On (SSO)"
              description="Use your existing identity provider for authentication and authorization. Integrates with Okta, Microsoft Entra, Keycloak, or any OpenID Connect (OIDC) provider."
              contentPosition="right"
            >
              <TeamsImageFrame
                slot="content"
                src={sso}
                alt="Single Sign-On login interface showing Okta, Microsoft Entra, and Keycloak provider options"
              />
            </TeamsFeatureItem>

            <TeamsFeatureItem
              title="Audit logs"
              description="Track who ran what code and when. Every notebook execution is logged with user, timestamp, and the exact code executed."
              contentPosition="right"
              isLast={true}
            >
              <TeamsImageFrame
                slot="content"
                src={auditLogs}
                alt="Terminal-style audit log display showing timestamped user actions including user lookup and order refund operations"
              />
            </TeamsFeatureItem>
          </TeamsFeatureList>
        </div>
      </div>
    </div>
  </section>
  <section id="cta" class="bg-gray-100 py-32 px-4 lg:px-0">
    <div class="flex flex-col gap-10 items-center">
      <h1
        class="max-w-xl text-3xl/tight sm:text-4xl/tight font-semibold text-center"
      >
        Get started in a few minutes
      </h1>
      <a
        class="button-cta button-pink plausible-event-name=teams+signup+bottom+cta+click drop-shadow-[0_15px_25px_rgba(228,76,117,0.5)] hover:drop-shadow-[0_15px_25px_rgba(0,0,0,0.5)]"
        href="https://teams.livebook.dev"
      >
        <Icon icon="rocket-line" class="text-xl" />
        <span class="px-2 font-semibold">Try it free for 30 days</span>
      </a>
    </div>
  </section>
  <section id="video-videomodal">
    <VideoModal
      dataVideoModal="1"
      videoURL="https://www.youtube.com/embed/lwLx5beXxsg?si=zWHqFe38ib65DoGU&"
    />
    <VideoModal
      dataVideoModal="2"
      videoURL="https://www.youtube.com/embed/ZBPn223pVI4?si=DVWFpANGygjQjeWT"
    />
  </section>

  <script>
    const openVideoModalButtons = document.querySelectorAll(".open-videomodal");
    const videomodales = document.querySelectorAll(".videomodal");
    const closeVideoModalButtons =
      document.querySelectorAll(".close-videomodal");

    openVideoModalButtons.forEach((button) => {
      button.addEventListener("click", () => {
        const videomodalId = button.getAttribute("data-videomodal");
        const videomodal = document.querySelector(
          `.videomodal[data-videomodal="${videomodalId}"]`
        );
        if (videomodal) {
          videomodal.classList.remove("hidden");
        }
      });
    });

    closeVideoModalButtons.forEach((button) => {
      button.addEventListener("click", () => {
        const videomodalId = button.getAttribute("data-videomodal");
        const videomodal = document.querySelector(
          `.videomodal[data-videomodal="${videomodalId}"]`
        );
        if (videomodal) {
          const iframe = videomodal.querySelector("iframe");
          iframe.src = iframe.src;
          videomodal.classList.add("hidden");
        }
      });
    });

    // Optional: Close videomodal when clicking outside of the video
    videomodales.forEach((videomodal) => {
      videomodal.addEventListener("click", (event) => {
        if (event.target === videomodal) {
          const iframe = videomodal.querySelector("iframe");
          iframe.src = iframe.src;
          videomodal.classList.add("hidden");
        }
      });
    });
  </script>
</Layout>
