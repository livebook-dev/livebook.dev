  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const openLightboxButtons = document.querySelectorAll(".open-lightbox");
      const lightboxes = document.querySelectorAll(".lightbox");
      const closeLightboxButtons = document.querySelectorAll(".close-lightbox");

      openLightboxButtons.forEach((button) => {
        button.addEventListener("click", () => {
          const lightboxId = button.getAttribute("data-lightbox");
          const lightbox = document.querySelector(
            `.lightbox[data-lightbox="${lightboxId}"]`
          );
          if (lightbox) {
            lightbox.classList.remove("hidden");
          }
        });
      });

      closeLightboxButtons.forEach((button) => {
        button.addEventListener("click", () => {
          const lightboxId = button.getAttribute("data-lightbox");
          const lightbox = document.querySelector(
            `.lightbox[data-lightbox="${lightboxId}"]`
          );
          if (lightbox) {
            lightbox.classList.add("hidden");
          }
        });
      });

      // Optional: Close lightbox when clicking outside of the video
      lightboxes.forEach((lightbox) => {
        lightbox.addEventListener("click", (event) => {
          if (event.target === lightbox) {
            lightbox.classList.add("hidden");
          }
        });
      });
    });
  </script>
