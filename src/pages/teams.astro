---
import { Image } from "astro:assets";

import Layout from "../layouts/Layout.astro";

import Icon from "../components/Icon.astro";
import Tooltip from "../components/Tooltip.astro";
import Card from "../components/TeamsCard.astro";
import DatabaseCard from "../components/TeamsDatabaseCard.astro";
import PlayButton from "../components/TeamsPlayButton.astro";
import Lightbox from "../components/Lightbox.astro";

import teamsIntroScreenshot from "../images/teams/intro-screenshot.png";
import starIcon from "../images/teams/star-icon.svg";
import plusIcon from "../images/teams/plus-icon.svg";
import elixirLogo from "../images/teams/elixir-logo.svg";
import hexLibrary from "../images/teams/feature-hex-library.png";
import callFunction from "../images/teams/feature-call-function.png";
import dashedLine from "../images/teams/dashed-line.svg";
import dashedLineTwo from "../images/teams/dashed-line-two.svg";
import formsAndInputs from "../images/teams/forms-and-inputs.png";
import dataTables from "../images/teams/data-tables.png";
import chartOne from "../images/teams/chart-one.png";
import chartTwo from "../images/teams/chart-two.png";
import mapsOne from "../images/teams/maps-one.png";
import mapsTwo from "../images/teams/maps-two.png";
import amazonDatabase from "../images/teams/amazon-database.png";
import microsoftDatabase from "../images/teams/microsoft-database.png";
import mysqlDatabase from "../images/teams/mysql-database.png";
import postgresDatabase from "../images/teams/postgres-database.png";
import googleDatabase from "../images/teams/google-database.png";
import snowflakeDatabase from "../images/teams/snowflake-database.png";
import sqliteDatabase from "../images/teams/sqlite-database.png";
import readDataSQL from "../images/teams/read-data-sql.png";
import readDataLocal from "../images/teams/read-data-local.png";
import readDataFile from "../images/teams/read-data-file-formats.png";
import tailscaleLogo from "../images/teams/tailscale-logo.png";
import googleIapLogo from "../images/teams/google-iap-logo.png";
import cloudflareLogo from "../images/teams/cloudflare-logo.png";
import josePhoto from "../images/teams/jose-photo.jpg";
---

<Layout
  title="Teams"
  isDarkMode={true}
  displaySponsors={false}
  displayFooter="Teams"
>
  <section id="intro" class="bg-gray-900 overflow-x-hidden relative">
    <div
      class="bg-gradient-to-b from-gray-900 to-gray-600 rounded-b-[60px] flex flex-col justify-center items-center"
    >
      <div class="m-auto max-w-7xl px-4 pt-12 sm:pt-24 pb-52 sm:pb-60">
        <div class="flex flex-col space-y-6 md:space-y-10 items-center">
          <h1
            class="max-w-4xl text-3xl/tight sm:text-4xl/tight md:text-5xl/tight font-semibold text-gray-50 text-center"
          >
            Build and deploy internal tools fast with Elixir and Livebook Teams
          </h1>
          <span
            class="text-lg md:text-xl text-center font-light text-gray-200 max-w-2xl"
          >
            Transform scripts, SQL queries, and backend operations into web apps
            that anybody in your company can use. Make your co-workers more
            self-sufficient and get your time back.
          </span>
          <div class="space-y-4 md:space-y-0 md:flex md:gap-10 text-center">
            <a
              class="button-cta button-pink plausible-event-name=teams+early+access+main+cta+click drop-shadow-[0_15px_25px_rgba(228,76,117,0.5)] hover:drop-shadow-[0_15px_25px_rgba(0,0,0,0.5)]"
              href="https://docs.google.com/forms/d/e/1FAIpQLScDfvUqT4f_s95dqNGyoXwVMD_Vl059jT6r5MPgXB99XVMCuw/viewform"
            >
              <Icon icon="rocket-line" class="text-xl" />
              <span class="px-2 font-semibold">I want FREE early access</span>
            </a>
            <button
              class="button-cta button-outlined gap-4 px-5 inline-flex plausible-event-name=+demo+cta+click open-lightbox"
              data-lightbox="1"
            >
              <Icon icon="play-circle-fill" class="text-4xl" />
              <div class="flex flex-col items-start">
                <span class="font-semibold">Watch Demo</span>
                <span class="text-sm">4 minutes</span>
              </div>
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="px-4 bg-gray-900 -mb-24 md:-mb-16">
    <div class="relative max-w-5xl mx-auto">
      <div class="relative top-[-150px] w-full mx-auto z-10">
        <Image
          class="w-full h-auto"
          src={teamsIntroScreenshot}
          alt="Feature: On-premise Livebook apps"
        />
        <div
          class="absolute top-0 left-0 w-full h-full bg-gray-900/30 rounded-lg sm:rounded-2xl flex justify-center items-center group cursor-pointer open-lightbox plausible-event-name=watch+demo+play+click"
          data-lightbox="1"
        >
          <PlayButton
            videoTitle="Watch JosÃ© deploying an Elixir app"
            videoLenght="4 min"
            videoAuthorImg={josePhoto.src}
          />
        </div>
      </div>
    </div>
  </section>
  <section id="build-with-teams" class="bg-gray-900 overflow-x-hidden">
    <div class="m-auto max-w-6xl flex flex-col px-4 xl:px-0">
      <h1
        class="max-w-4xl text-3xl/tight sm:text-4xl/tight md:text-5xl/tight font-semibold text-gray-50 justify-self-start"
      >
        What can you build with<br />Livebook Teams?
      </h1>
      <span class="text-gray-300 text-xl pt-10">Examples</span>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 auto-rows-fr lg:grid-cols-3 gap-6 pt-4"
      >
        <Card
          class="bg-gradient-to-br"
          icon="money-dollar-circle-line"
          iconColor="text-blue-600"
          title="Customer Payment Refund Processor"
          description="Enable the support team to refund customers. No need to run that script by yourself anymore."
        />
        <Card
          class="bg-gradient-to-tl"
          icon="database-2-line"
          iconColor="text-green-600"
          title="Self-Service SQL Query Visualization"
          description="A web UI where non-technical co-workers can execute and visualize shared SQL queries. Empower them so you can stop being interrupted."
        />
        <Card
          class="bg-gradient-to-br"
          icon="user-add-line"
          iconColor="text-yellow-500"
          title="Customer Onboarding Workflow Automation"
          description="Help customer success and operations automate the steps needed when onboarding new customers, like setting up accounts, importing data, etc. Bye bye manual work."
        />
        <Card
          class="bg-gradient-to-br"
          icon="bookmark-3-line"
          iconColor="text-gray-400"
          title="Runbooks"
          description="Instead of static documents, build interactive runbooks for technical support, DevOps, and solutions engineering. No more need to answer â€œhow can I do that?â€."
        />
        <Card
          class="bg-gradient-to-tl"
          icon="dashboard-3-line"
          iconColor="text-yellow-500"
          title="Admin Panels"
          description="Enable customer-facing teams to look up user data, extend free trials, and view usage history."
        />
        <Card
          class="bg-gradient-to-br"
          icon="line-chart-line"
          iconColor="text-red-600"
          title="Track KPIs and Metrics"
          description="Build a dashboard where the marketing and product teams can visualize funnel and product usage metrics."
        />
      </div>
    </div>
  </section>
  <section id="teams-features" class="bg-gray-900 overflow-x-hidden pt-24">
    <div
      class="bg-gray-200 rounded-t-[40px] sm:rounded-t-[60px] py-16 sm:py-24"
    >
      <div id="teams-features-one" class="m-auto max-w-6xl text-gray-900 px-4">
        <div id="teams-features-title">
          <div class="flex items-center gap-2 sm:gap-5">
            <h3 class="text-xl md:text-3xl font-semibold">Livebook</h3>
            <Image
              src={plusIcon}
              alt="Plus Icon"
              class="w-6 sm:w-10 h-6 sm:h-10"
            />
          </div>
          <h1 class="text-3xl sm:text-4xl md:text-5xl/tight font-semibold mt-2">
            Livebook Teams features
          </h1>
          <p class="text-gray-600 text-lg sm:text-xl md:text-2xl mt-3">
            A fast (and fun ðŸ˜ƒ) way to build internal tools.
          </p>
        </div>
        <div id="build-with-elixir" class="mt-8 sm:mt-16">
          <div id="build-with-elixir-title">
            <div class="flex items-center gap-2">
              <h2 class="text-2xl md:text-4xl font-semibold">
                Build with <span class="text-elixir">Elixir</span>
              </h2>
              <Image src={elixirLogo} alt="Elixir Logo" class="w-9 h-9" />
            </div>
            <p class="max-w-xl text-gray-700 text-lg mt-3 font-light">
              No-code tools are good for non-technical teams, but as Elixir
              developers, they constrain and even slow us down. With Livebook,
              you get to build what you need using the Elixir tools and packages
              you're familiar with.
            </p>
          </div>
          <div
            id="build-with-elixir-features"
            class="mt-10 space-y-10 lg:space-y-[80px] relative"
          >
            <div id="hex-libraries">
              <div
                class="flex flex-col lg:flex-row lg:items-center justify-between gap-4"
              >
                <div>
                  <div class="flex items-center">
                    <Image src={starIcon} alt="Star Icon" class="w-9 h-9" />
                    <h3 class="text-lg md:text-3xl font-semibold ml-4">
                      Use Hex Libraries
                    </h3>
                  </div>
                  <p
                    class="text-md font-light max-w-sm ml-[52px] mt-2 text-gray-700"
                  >
                    Livebook is integrated with Hex and uses Mix.install to
                    manage dependencies.
                  </p>
                </div>
                <Image
                  src={hexLibrary}
                  alt="Hex Library"
                  class="lg:mr-12 xl:mr-24 pl-12 lg:pl-0"
                />
              </div>
            </div>
            <div id="call-functions">
              <div
                class="flex flex-col lg:flex-row lg:items-center justify-between gap-4 pt-1"
              >
                <div>
                  <div class="flex">
                    <Image
                      src={starIcon}
                      alt="Star Icon"
                      class="w-9 h-9 z-10"
                    />
                    <h3 class="text-lg md:text-3xl font-semibold ml-4">
                      Call functions from your main <br />Elixir/Phoenix app
                      directly
                    </h3>
                  </div>
                  <p
                    class="text-md font-light max-w-sm ml-[52px] mt-2 text-gray-700"
                  >
                    No need to write HTTP APIs for your internal tools. Use
                    Elixir's built-in mechanisms for integrating multiple Erlang
                    VM nodes.
                  </p>
                </div>
                <Image
                  src={callFunction}
                  alt="Call functions"
                  class="lg:w-1/2 pl-12 lg:pl-0"
                />
              </div>
            </div>
            <Image
              src={dashedLine}
              alt="Dashed Line"
              class="absolute top-0 left-[17px] w-[3px] h-[270px] lg:w-auto lg:h-auto"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="teams-features-two" class="bg-gray-200 pb-6 px-4 lg:px-0">
    <div
      class="mx-auto max-w-6xl bg-gray-300 rounded-3xl px-4 lg:px-0 py-10 md:py-16 flex flex-col items-center space-y-6 md:space-y-12"
    >
      <h1 class="text-2xl md:text-5xl font-semibold mt-2">
        An <span class="text-elixir">Elixir</span> Library of <br /> UI Building
        Blocks
      </h1>
      <div
        class="max-w-4xl mt-4 text-gray-700 font-light text-lg md:text-xl text-center"
      >
        Assemble UIs with zero to minimal need for HTML and CSS. Livebook
        provides a set of UI building blocks you can use just by writing Elixir,
        so you can stay in the comfort of the language you love and build UIs
        faster.
      </div>
      <div id="teams-features-forms-and-input">
        <div class="flex flex-col items-center space-y-5">
          <div class="flex items-center justify-center">
            <Image
              src={starIcon}
              alt="Star Icon"
              class="w-8 sm:w-10 h-8 sm:h-10"
            />
            <h3 class="text-lg md:text-3xl font-semibold ml-2 sm:ml-4">
              Forms and Inputs
            </h3>
          </div>
          <p class="text-md md:text-lg font-light text-gray-700 text-center">
            Combine various input types like text, dropdowns, and date pickers
            into a form.
          </p>
          <Image
            src={formsAndInputs}
            alt="Forms and Inputs"
            class="w-full h-auto"
          />
        </div>
      </div>
      <div id="teams-features-data-tables">
        <div class="flex flex-col items-center space-y-5">
          <div class="flex items-center justify-center">
            <Image
              src={starIcon}
              alt="Star Icon"
              class="w-8 sm:w-10 h-8 sm:h-10"
            />
            <h3 class="text-lg md:text-3xl font-semibold ml-2 sm:ml-4">
              Data Tables
            </h3>
          </div>
          <p class="text-md md:text-lg font-light text-gray-700 text-center">
            Easily display, sort, and paginate your data.
          </p>
          <Image src={dataTables} alt="Data Tables" class="w-full h-auto" />
        </div>
      </div>
      <div id="teams-features-chart">
        <div class="flex flex-col items-center space-y-5">
          <div class="flex items-center justify-center">
            <Image
              src={starIcon}
              alt="Star Icon"
              class="w-8 sm:w-10 h-8 sm:h-10"
            />
            <h3 class="text-lg md:text-3xl font-semibold ml-2 sm:ml-4">
              Charts
            </h3>
          </div>
          <p class="text-md md:text-lg font-light text-gray-700 text-center">
            Build and visualize charts using Livebook's native integration with
            Vega-Lite.
          </p>
          <div
            class="flex flex-col sm:flex-row gap-6 sm:gap-0 justify-center mt-10"
          >
            <div class="flex flex-col items-center justify-center">
              <Image src={chartOne} alt="Chart Image" class="w-[90%]" />
              <p
                class="font-medium text-sm sm:text-base text-center text-gray-800 mt-2"
              >
                Use the Chart Smart Cell to <br /> generate simple charts
              </p>
            </div>
            <div class="flex flex-col items-center justify-center">
              <Image src={chartTwo} alt="Chart Image" class="w-[90%]" />
              <p
                class="font-medium text-sm sm:text-base text-center text-gray-800 mt-2"
              >
                Use code to build more <br />complex charts
              </p>
            </div>
          </div>
        </div>
      </div>
      <div id="teams-features-maps">
        <div class="flex flex-col items-center">
          <div class="flex items-center justify-center mt-5">
            <Image
              src={starIcon}
              alt="Star Icon"
              class="w-8 sm:w-10 h-8 sm:h-10"
            />
            <h3 class="text-lg md:text-3xl font-semibold ml-2 sm:ml-4">Maps</h3>
          </div>
          <p class="text-lg font-light text-gray-700 text-center mt-5">
            Plot objects on a map and visualize geo data using Livebook's native
            integration with MapLibre.
          </p>
          <div
            class="flex flex-col sm:flex-row gap-6 sm:gap-0 justify-center mt-10"
          >
            <div class="flex flex-col items-center justify-center">
              <Image src={mapsOne} alt="Chart Image" class="w-[90%]" />
              <p
                class="font-medium text-sm sm:text-base text-center text-gray-800 mt-2"
              >
                Use the Map Smart cell to <br /> generate simple maps
              </p>
            </div>
            <div class="flex flex-col items-center justify-center">
              <Image src={mapsTwo} alt="Chart Image" class="w-[90%]" />
              <p
                class="font-medium text-sm sm:text-base text-center text-gray-800 mt-2"
              >
                Use code to build more <br /> complex maps
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="teams-features-three" class="bg-gray-200 pt-6 pb-24">
    <div class="m-auto max-w-6xl px-4 xl:px-0">
      <div class="relative">
        <div id="read-data-with-easy-title">
          <div class="flex items-center gap-2">
            <h2 class="text-2xl md:text-5xl font-semibold text-gray-900">
              Read data with ease
            </h2>
          </div>
          <p class="max-w-xl text-gray-700 text-lg md:text-xl mt-3 font-light">
            Whenever you're building dashboards, internal reports, or
            lightweight business intelligence, you need to consume data. With
            Livebook and Elixir, that's easy, no matter the data source.
          </p>
        </div>
        <div id="read-from-sql" class="mt-10">
          <div class="flex items-center">
            <Image src={starIcon} alt="Star Icon" class="w-9 h-9 z-20" />
            <h3 class="text-lg md:text-3xl font-semibold ml-4">
              Read data from a SQL database
            </h3>
          </div>
          <p
            class="text-md md:text-lg font-light max-w-sm ml-[52px] mt-2 text-gray-700"
          >
            Built-in integrations to multiple databases, so you don't need to
            write boilerplate code to run SQL queries.
          </p>
          <div
            class="grid grid-cols-2 xs:grid-cols-3 lg:grid-cols-4 gap-4 mt-10 px-[52px]"
          >
            <DatabaseCard
              title="PostgreSQL"
              imageURL={postgresDatabase.src}
              integrationId="postgresql"
            />
            <DatabaseCard
              title="MySQL"
              imageURL={mysqlDatabase.src}
              integrationId="mysql"
            />
            <DatabaseCard
              title="Microsoft SQL Server"
              imageURL={microsoftDatabase.src}
              integrationId="sqlserver"
            />
            <DatabaseCard
              title="SQLite"
              imageURL={sqliteDatabase.src}
              integrationId="sqlite"
            />
            <DatabaseCard
              title="Google BigQuery"
              imageURL={googleDatabase.src}
              integrationId="google-bigquery"
            />
            <DatabaseCard
              title="Amazon Athena"
              imageURL={amazonDatabase.src}
              integrationId="amazon-athena"
            />
            <DatabaseCard
              title="Snowflake"
              imageURL={snowflakeDatabase.src}
              integrationId="snowflake"
            />
          </div>
          <p
            class="text-md md:text-lg font-light max-w-sm ml-[52px] mt-10 text-gray-700"
          >
            Write SQL queries directly in Livebook and easily see the result
          </p>
          <Image src={readDataSQL} alt="Read data from SQL" class="pl-[52px]" />
        </div>
        <div id="read-from-local" class="mt-10">
          <div class="flex items-start">
            <Image src={starIcon} alt="Star Icon" class="w-9 h-9 z-20" />
            <h3 class="text-lg md:text-3xl font-semibold ml-4 max-w-lg">
              Read data from a local or cloud-hosted file
            </h3>
          </div>
          <p
            class="text-md md:text-lg font-light max-w-md ml-[52px] mt-2 text-gray-700"
          >
            It doesn't matter if your data is stored as a file in your file
            system or in a cloud storage service like S3; Livebook handles both
            ways transparently.
          </p>
          <Image
            src={readDataLocal}
            alt="Read data from local"
            class="mx-auto mt-3 pl-[52px] w-full max-w-xl"
          />
        </div>
        <div id="read-from-data-files" class="mt-10">
          <div class="flex items-start">
            <Image src={starIcon} alt="Star Icon" class="w-9 h-9 z-20" />
            <h3 class="text-lg md:text-3xl font-semibold ml-4 max-w-lg">
              Read data from structured data file formats
            </h3>
          </div>
          <p
            class="text-md md:text-lg font-light max-w-md ml-[52px] mt-2 text-gray-700"
          >
            Read data from CSV, IPC, NDJson, or Parquet files with code
            generated via drag and drop.
          </p>
          <div class="relative w-full max-w-lg mx-auto mt-3">
            <Image
              src={readDataFile}
              alt="Read data from local"
              class="w-full h-auto"
            />
            <div
              class="absolute top-0 left-0 w-full h-full bg-gray-900/30 rounded-[14px] flex justify-center items-center group cursor-pointer open-lightbox"
              data-lightbox="2"
            >
              <PlayButton
                videoTitle="Watch JosÃ© deploying an Elixir app"
                videoLenght="4 min"
                videoAuthorImg={josePhoto.src}
              />
            </div>
          </div>
        </div>
        <Image
          src={dashedLineTwo}
          alt="Dashed Line"
          class="absolute top-[230px] sm:top-[210px] left-[17px] h-[1250px] sm:h-[1620px] md:h-[1620px] lg:h-[1540px] z-10"
        />
      </div>
    </div>
  </section>
  <section id="teams-features-four" class="bg-gray-100">
    <div class="px-4 lg:px-0 bg-gray-200 rounded-b-[40px] sm:rounded-b-[60px]">
      <div class="bg-gray-100">
        <div
          class="relative pb-[600px] bg-gray-200 rounded-b-[40px] sm:rounded-b-[60px]"
        >
          <div
            class="w-full h-full absolute top-0 left-1/2 transform -translate-x-1/2"
          >
            <div
              class="mx-auto max-w-6xl bg-gray-300 rounded-3xl px-4 lg:px-0 py-10 md:py-16 flex flex-col items-center space-y-6 md:space-y-12"
            >
              <div id="teams-features-deploy-and-share" class="text-center">
                <h1 class="text-2xl md:text-5xl font-semibold mt-2">
                  Deploy and Share Securely
                </h1>
                <p class="mt-4 text-gray-700 font-light text-lg md:text-2xl">
                  The security of on-premises hosting with the DX of one-click
                  deployment.
                </p>
              </div>
              <div
                id="deploy-and-share-features"
                class="grid grid-cols-1 sm:grid-cols-2 gap-6 sm:gap-14 justify-between"
              >
                <div id="deploy-and-share-self-hosting">
                  <div class="flex items-center">
                    <Image
                      src={starIcon}
                      alt="Star Icon"
                      class="w-8 sm:w-10 h-8 sm:h-10"
                    />
                    <h3 class="text-lg md:text-3xl font-semibold ml-4">
                      Self Hosting
                    </h3>
                  </div>
                  <p
                    class="text-md md:text-lg font-light max-w-sm ml-[52px] mt-2 text-gray-700"
                  >
                    Run your internal tools on your own infra in less than 10
                    minutes. One less concern about security and privacy.
                  </p>
                </div>
                <div id="deploy-and-share-one-click">
                  <div class="flex items-center">
                    <Image
                      src={starIcon}
                      alt="Star Icon"
                      class="w-8 sm:w-10 h-8 sm:h-10"
                    />
                    <h3 class="text-lg md:text-3xl font-semibold ml-4">
                      One-Click Deploy
                    </h3>
                  </div>
                  <p
                    class="text-md md:text-lg font-light max-w-sm ml-[52px] mt-2 text-gray-700"
                  >
                    Deploy internal tools to your own infrastructure with just
                    one click.
                  </p>
                </div>
                <div
                  id="deploy-and-share-authentication"
                  class="order-last sm:order-none"
                >
                  <div class="flex items-center">
                    <Image
                      src={starIcon}
                      alt="Star Icon"
                      class="w-8 sm:w-10 h-8 sm:h-10"
                    />
                    <h3 class="text-lg md:text-3xl font-semibold ml-4">
                      Authentication
                    </h3>
                  </div>
                  <p
                    class="text-md md:text-lg font-light max-w-sm ml-[52px] mt-2 text-gray-700"
                  >
                    Authenticate internal users using our built-in integrations,
                    or quickly bring your own custom auth.
                  </p>
