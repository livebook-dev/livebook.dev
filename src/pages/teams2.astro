---
import { Image } from "astro:assets";

import Layout from "../layouts/Layout.astro";

import Icon from "../components/Icon.astro";
import Tooltip from "../components/Tooltip.astro";
import TeamsCard from "../components/TeamsCard.astro";
import teamsIntroScreenshot from "../images/teams2/intro-screenshot.png";
import starIcon from "../images/teams2/star-icon.svg";
import plusIcon from "../images/teams2/plus-icon.svg";
import elixirLogo from "../images/teams2/elixir-logo.svg";
import hexLibrary from "../images/teams2/feature-hex-library.png";
import callFunction from "../images/teams2/feature-call-function.png";
import dashedLine from "../images/teams2/dashed-line.svg";
import formsAndInputs from "../images/teams2/forms-and-inputs.png";
import dataTables from "../images/teams2/data-tables.png";
import chartOne from "../images/teams2/chart-one.png";
import chartTwo from "../images/teams2/chart-two.png";
import mapsOne from "../images/teams2/maps-one.png";
import mapsTwo from "../images/teams2/maps-two.png";
import amazonDatabase from "../images/teams2/amazon-database.png";
import microsoftDatabase from "../images/teams2/microsoft-database.png";
import mysqlDatabase from "../images/teams2/mysql-database.png";
import postgresDatabase from "../images/teams2/postgres-database.png";
import googleDatabase from "../images/teams2/google-database.png";
import snowflakeDatabase from "../images/teams2/snowflake-database.png";
---

<Layout title="Teams" isDarkMode={true} displaySponsors={false}>
  <section id="intro" class="bg-gray-900 overflow-x-hidden relative">
    <div
      class="bg-gradient-to-b from-gray-900 to-gray-600 rounded-b-[60px] flex flex-col justify-center items-center"
    >
      <div class="m-auto max-w-7xl px-4 pt-24 pb-60">
        <div class="flex flex-col space-y-10 items-center">
          <h1
            class="max-w-4xl text-2xl md:text-5xl font-semibold text-gray-200"
          >
            Build and deploy internal tools fast <br /> with Elixir and Livebook
            Teams
          </h1>
          <span class="text-lg text-center font-light text-gray-200 max-w-xl">
            Transform scripts, SQL queries, and backend operations into web apps
            that anybody in your company can use. Make your co-workers more
            self-sufficient and get your time back.
          </span>
          <div class="flex gap-10">
            <a
              class="button-cta button-pink plausible-event-name=teams+early+access+main+cta+click drop-shadow-[0_15px_25px_rgba(228,76,117,0.5)]"
              href="https://docs.google.com/forms/d/e/1FAIpQLScDfvUqT4f_s95dqNGyoXwVMD_Vl059jT6r5MPgXB99XVMCuw/viewform"
            >
              <Icon icon="rocket-line" class="text-xl" />
              <span class="px-2 font-semibold">I want FREE early access</span>
            </a>
            <a
              class="button-cta button-outlined gap-4 px-5"
              href="https://docs.google.com/forms/d/e/1FAIpQLScDfvUqT4f_s95dqNGyoXwVMD_Vl059jT6r5MPgXB99XVMCuw/viewform"
            >
              <Icon icon="play-circle-fill" class="text-4xl" />
              <div class="flex flex-col items-start">
                <span class="font-semibold">Watch Demo</span>
                <span class="text-sm">4 minutes</span>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="mx-auto sm:max-w-5xl relative">
    <Image
      class="absolute top-[-150px] left-1/2 transform -translate-x-1/2"
      src={teamsIntroScreenshot}
      alt="Feature: On-premise Livebook apps"
    />
    <div
      class="absolute top-[-150px] left-1/2 transform -translate-x-1/2 bg-gray-900/30 w-[1024px] h-[576px] rounded-[20px] flex justify-center items-center"
    >
      <Icon icon="play-fill" class="text-5xl absolute z-10 text-white" />
      <div class="absolute rounded-full w-20 h-20 bg-blue-600"></div>
      <div class="absolute rounded-full w-24 h-24 bg-blue-600/60 animate-pulse">
      </div>
    </div>
  </section>
  <section
    id="build-with-teams"
    class="bg-gray-900 overflow-x-hidden pt-[400px]"
  >
    <div class="m-auto max-w-7xl flex flex-col px-4 md:px-0">
      <h1
        class="text-2xl md:text-5xl md:leading-tight font-semibold text-gray-200 justify-self-start pt-32"
      >
        What can you build with<br />Livebook Teams?
      </h1>
      <span class="text-gray-200 text-xl pt-10">Examples</span>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 pt-4">
        <TeamsCard
          class="bg-gradient-to-br h-[292px]"
          icon="money-dollar-circle-line"
          iconColor="text-blue-600"
          title="Customer Payment Refund Processor"
          description="Enable the support team to refund customers. No need to run that script by yourself anymore."
        />
        <TeamsCard
          class="bg-gradient-to-tl h-[292px]"
          icon="database-2-line"
          iconColor="text-green-600"
          title="Self-Service SQL Query Visualization"
          description="A web UI where non-technical co-workers can execute and visualize shared SQL queries. Empower them so you can stop being interrupted."
        />
        <TeamsCard
          class="bg-gradient-to-br h-[292px]"
          icon="user-add-line"
          iconColor="text-yellow-500"
          title="Customer Onboarding Workflow Automation"
          description="Help customer success and operations automate the steps needed when onboarding new customers, like setting up accounts, importing data, etc. Bye bye manual work."
        />
        <TeamsCard
          class="bg-gradient-to-br h-[252px]"
          icon="bookmark-3-line"
          iconColor="text-gray-400"
          title="Runbooks"
          description="Instead of static documents, build interactive runbooks for technical support, DevOps, and solutions engineering. No more need to answer â€œhow can I do that?â€."
        />
        <TeamsCard
          class="bg-gradient-to-tl h-[252px]"
          icon="dashboard-3-line"
          iconColor="text-yellow-500"
          title="Admin Panels"
          description="Enable customer-facing teams to look up user data, extend free trials, and view usage history."
        />
        <TeamsCard
          class="bg-gradient-to-br h-[252px]"
          icon="line-chart-line"
          iconColor="text-red-600"
          title="Track KPIs and Metrics"
          description="Enable the support team to refund customers. No need to run that script by yourself anymore."
        />
      </div>
    </div>
  </section>
  <section id="teams-features" class="bg-gray-900 overflow-x-hidden pt-24">
    <div class="bg-gray-200 rounded-t-[60px] py-24">
      <div id="teams-features-one" class="m-auto max-w-6xl text-gray-900">
        <div id="teams-features-title">
          <div class="flex items-center gap-5">
            <h3 class="text-lg md:text-3xl font-semibold">Livebook</h3>
            <Image src={plusIcon} alt="Plus Icon" class="w-10 h-10" />
          </div>
          <h1 class="text-2xl md:text-5xl font-semibold mt-2">
            Livebook Teams features
          </h1>
          <p class="text-gray-600 text-xl mt-3">
            A fast (and fun ðŸ˜ƒ) way to build internal tools.
          </p>
        </div>
        <div id="build-with-elixir" class="mt-16">
          <div id="build-with-elixir-title">
            <div class="flex items-center gap-2">
              <h2 class="text-xl md:text-4xl font-semibold">
                Build with <span class="text-elixir">Elixir</span>
              </h2>
              <Image src={elixirLogo} alt="Elixir Logo" class="w-9 h-9" />
            </div>
            <p class="max-w-xl text-gray-700 text-lg mt-3 font-light">
              No-code tools are good for non-technical teams, but as Elixir
              developers, they constrain and even slow us down. With Livebook,
              you get to build what you need using the Elixir tools and packages
              you're familiar with.
            </p>
          </div>
          <div
            id="build-with-elixir-features"
            class="mt-10 space-y-[80px] relative"
          >
            <div id="hex-libraries">
              <div class="flex items-center justify-between">
                <div>
                  <div class="flex items-center">
                    <Image src={starIcon} alt="Star Icon" class="w-9 h-9" />
                    <h3 class="text-lg md:text-3xl font-semibold ml-4">
                      Use Hex Libraries
                    </h3>
                  </div>
                  <p
                    class="text-md font-light max-w-sm ml-[52px] mt-2 text-gray-700"
                  >
                    Livebook is integrated with Hex and uses Mix.install to
                    manage dependencies.
                  </p>
                </div>
                <Image src={hexLibrary} alt="Hex Library" class="mr-28" />
              </div>
            </div>
            <div id="call-functions">
              <div class="flex items-center justify-between pt-[1px]">
                <div>
                  <div class="flex">
                    <Image src={starIcon} alt="Star Icon" class="w-9 h-9" />
                    <h3 class="text-lg md:text-3xl font-semibold ml-4">
                      Call functions from your main <br />Elixir/Phoenix app
                      directly
                    </h3>
                  </div>
                  <p
                    class="text-md font-light max-w-sm ml-[52px] mt-2 text-gray-700"
                  >
                    No need to write HTTP APIs for your internal tools. Use
                    Elixir's built-in mechanisms for integrating multiple Erlang
                    VM nodes.
                  </p>
                </div>
                <Image src={callFunction} alt="Call functions" class="w-1/2" />
              </div>
            </div>
            <Image
              src={dashedLine}
              alt="Dashed Line"
              class="absolute top-0 left-[17px]"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="teams-features-two" class="bg-gray-200 pb-6">
    <div
      class="mx-auto max-w-6xl bg-gray-300 rounded-3xl px-4 md:px-0 py-16 flex flex-col items-center space-y-12"
    >
      <h1 class="text-2xl md:text-5xl font-semibold mt-2">
        An <span class="text-elixir">Elixir</span> Library of <br /> UI Building
        Blocks
      </h1>
      <div class="max-w-2xl mt-4 text-gray-700 font-light text-lg">
        Assemble UIs with zero to minimal need for HTML and CSS. Livebook
        provides a set of UI building blocks you can use just by writing Elixir,
        so you can stay in the comfort of the language you love and build UIs
        faster.
      </div>
      <div id="teams-features-forms-and-input">
        <div class="flex flex-col items-center space-y-5">
          <div class="flex items-center justify-center">
            <Image src={starIcon} alt="Star Icon" class="w-10 h-10" />
            <h3 class="text-lg md:text-3xl font-semibold ml-4">
              Forms and Inputs
            </h3>
          </div>
          <p class="text-md font-light text-gray-700">
            Combine various input types like text, dropdowns, and date pickers
            into a form.
          </p>
          <Image
            src={formsAndInputs}
            alt="Forms and Inputs"
            class="max-w-2xl"
          />
        </div>
      </div>
      <div id="teams-features-data-tables">
        <div class="flex flex-col items-center space-y-5">
          <div class="flex items-center justify-center">
            <Image src={starIcon} alt="Star Icon" class="w-10 h-10" />
            <h3 class="text-lg md:text-3xl font-semibold ml-4">Data Tables</h3>
          </div>
          <p class="text-md font-light text-gray-700">
            Easily display, sort, and paginate your data.
          </p>
          <Image src={dataTables} alt="Data Tables" class="max-w-2xl" />
        </div>
      </div>
      <div id="teams-features-chart">
        <div class="flex flex-col items-center">
          <div class="flex items-center justify-center mt-5">
            <Image src={starIcon} alt="Star Icon" class="w-10 h-10" />
            <h3 class="text-lg md:text-3xl font-semibold ml-4">Charts</h3>
          </div>
          <p class="text-md font-light text-gray-700">
            Build and visualize charts using Livebook's native integration with
            Vega-Lite.
          </p>
          <div class="flex justify-center mt-10">
            <div class="flex flex-col items-center justify-center">
              <Image src={chartOne} alt="Chart Image" class="w-[90%]" />
              <p class="font-medium text-md text-center mt-2">
                Use the Chart Smart Cell to <br /> generate simple charts
              </p>
            </div>
            <div class="flex flex-col items-center justify-center">
              <Image src={chartTwo} alt="Chart Image" class="w-[90%]" />
              <p class="font-medium text-md text-center mt-2">
                Use code to build more <br />complex charts
              </p>
            </div>
          </div>
        </div>
      </div>
      <div id="teams-features-maps">
        <div class="flex flex-col items-center">
          <div class="flex items-center justify-center mt-5">
            <Image src={starIcon} alt="Star Icon" class="w-10 h-10" />
            <h3 class="text-lg md:text-3xl font-semibold ml-4">Maps</h3>
          </div>
          <p class="text-md font-light text-gray-700 max-w-lg text-center mt-5">
            Plot objects on a map and visualize geo data using Livebook's native
            integration with MapLibre.
          </p>
          <div class="flex justify-center mt-10">
            <div class="flex flex-col items-center justify-center">
              <Image src={mapsOne} alt="Chart Image" class="w-[90%]" />
              <p class="font-medium text-md text-center mt-2">
                Use the Map Smart cell to <br /> generate simple maps
              </p>
            </div>
            <div class="flex flex-col items-center justify-center">
              <Image src={mapsTwo} alt="Chart Image" class="w-[90%]" />
              <p class="font-medium text-md text-center mt-2">
                Use code to build more <br /> complex maps
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="teams-features-three" class="bg-gray-200 pt-6 pb-24">
    <div class="m-auto max-w-6xl">
      <div id="read-data-with-easy-title">
        <div class="flex items-center gap-2">
          <h2 class="text-xl md:text-4xl font-semibold text-gray-900">
            Read data with ease
          </h2>
        </div>
        <p class="max-w-xl text-gray-700 text-lg mt-3 font-light">
          Whenever you're building dashboards, internal reports, or lightweight
          business intelligence, you need to consume data. With Livebook and
          Elixir, that's easy, no matter the data source.
        </p>
      </div>
      <div id="read-from-sql" class="mt-10">
        <div class="flex items-center">
          <Image src={starIcon} alt="Star Icon" class="w-9 h-9" />
          <h3 class="text-lg md:text-3xl font-semibold ml-4">
            Read data from an SQL database
          </h3>
        </div>
        <p class="text-md font-light max-w-sm ml-[52px] mt-2 text-gray-700">
          Built-in integrations to multiple databases, so you don't need to
          write boilerplate code to run SQL queries.
        </p>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-10 mx-[52px]">
          <div
            class="rounded-3xl bg-gray-100 w-60 h-60 flex justify-center items-center"
          >
            <Image src={microsoftDatabase} alt="Microsoft SQL Server logo" />
          </div>
          <div
            class="rounded-3xl bg-gray-100 w-60 h-60 flex justify-center items-center"
          >
            <Image src={microsoftDatabase} alt="Microsoft SQL Server logo" />
          </div>
          <div
            class="rounded-3xl bg-gray-100 w-60 h-60 flex justify-center items-center"
          >
            <Image src={microsoftDatabase} alt="Microsoft SQL Server logo" />
          </div>
          <div
            class="rounded-3xl bg-gray-100 w-60 h-60 flex justify-center items-center"
          >
            <Image src={microsoftDatabase} alt="Microsoft SQL Server logo" />
          </div>
          <div
            class="rounded-3xl bg-gray-100 w-60 h-60 flex justify-center items-center"
          >
            <Image src={microsoftDatabase} alt="Microsoft SQL Server logo" />
          </div>
          <div
            class="rounded-3xl bg-gray-100 w-60 h-60 flex justify-center items-center"
          >
            <Image src={microsoftDatabase} alt="Microsoft SQL Server logo" />
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
