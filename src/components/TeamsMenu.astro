---
import { isPathActive } from "../lib/utils.js";
---

<div class="flex-grow flex items-center justify-center">
  <nav
    data-el-menu
    class="flex gap-6 xl:gap-12 text-gray-600 dark:text-gray-200"
  >
    <a href="/teams">Teams</a>

    <aside class="relative group">
      <a href="/teams#use-cases" class="z-10 py-2">Use cases</a>
      <div
        class="origin-top-center absolute left-1/2 -translate-x-1/2 mt-1 w-48 rounded-md shadow-lg bg-gray-800 ring-1 ring-black ring-opacity-5 hidden group-hover:block transform"
      >
        <div
          class="py-1"
          role="menu"
          aria-orientation="vertical"
          aria-labelledby="use-cases-menu"
        >
          <a
            href="/teams#use-cases"
            class="block px-4 py-2 text-sm text-white hover:bg-gray-700 hover:text-gray-100 text-center"
            role="menuitem"
          >
            Internal tools
          </a>
          <a
            href="/teams#use-cases"
            class="block px-4 py-2 text-sm text-white hover:bg-gray-700 hover:text-gray-100 text-center"
            role="menuitem"
          >
            Production operations
          </a>
        </div>
      </div>
    </aside>

    <aside class="relative group">
      <a href="/teams#teams-features" class="z-10 py-2">Features</a>
      <div
        class="origin-top-center absolute left-1/2 -translate-x-1/2 mt-1 w-52 rounded-md shadow-lg bg-gray-800 ring-1 ring-black ring-opacity-5 hidden group-hover:block transform"
      >
        <div
          class="py-1"
          role="menu"
          aria-orientation="vertical"
          aria-labelledby="features-menu"
        >
          <a
            href="/teams#build-with-elixir"
            class="block px-4 py-2 text-sm text-white hover:bg-gray-700 hover:text-gray-100 text-center"
            role="menuitem"
          >
            Build with Elixir
          </a>
          <a
            href="/teams#teams-features-two"
            class="block px-4 py-2 text-sm text-white hover:bg-gray-700 hover:text-gray-100 text-center"
            role="menuitem"
          >
            UI widgets
          </a>
          <a
            href="/teams#teams-features-three"
            class="block px-4 py-2 text-sm text-white hover:bg-gray-700 hover:text-gray-100 text-center"
            role="menuitem"
          >
            Read data
          </a>
          <a
            href="/teams#teams-features-four"
            class="block px-4 py-2 text-sm text-white hover:bg-gray-700 hover:text-gray-100 text-center"
            role="menuitem"
          >
            Deploy Apps
          </a>
          <a
            href="/teams#teams-features-five"
            class="block px-4 py-2 text-sm text-white hover:bg-gray-700 hover:text-gray-100 text-center"
            role="menuitem"
          >
            Production Access
          </a>
        </div>
      </div>
    </aside>
    <a
      href="/teams/pricing"
      class:list={[
        {
          "border-b-2 border-gray-400": isPathActive(
            "/teams/pricing",
            Astro.url
          ),
        },
      ]}>Pricing</a
    >
    <a href="https://hexdocs.pm/livebook/intro_to_teams.html">Docs</a>
  </nav>
</div>
<div class="xl:w-52 flex justify-end">
  <nav class="flex items-center">
    <a
      class:list={[
        "px-5 py-2 font-medium text-sm text-gray-600 whitespace-nowrap dark:text-gray-200",
        "plausible-event-name=nav+login+click",
      ]}
      href="https://teams.livebook.dev/"
    >
      Sign in
    </a>
    <a
      class:list={[
        "px-5 py-2 rounded-lg font-medium text-sm border border-gray-200 text-gray-600 whitespace-nowrap hover:bg-gray-100 focus:bg-gray-100 dark:text-gray-200 dark:border-gray-600 dark:hover:bg-gray-800 dark:focus:bg-gray-800",
        "plausible-event-name=nav+signup+click",
      ]}
      href="https://teams.livebook.dev/"
    >
      Sign up free
    </a>
  </nav>
</div>
