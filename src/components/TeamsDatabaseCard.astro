---
export interface Props {
  title: string;
  imageURL: string;
}

const { title, imageURL } = Astro.props;
---

<div class="relative group">
  <div
    class="absolute rounded-3xl bg-gray-900/60 w-60 h-60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10 flex items-end justify-center"
  >
    <div class="mb-4 text-white">{title}</div>
  </div>
  <div
    class="rounded-3xl bg-gray-100 w-60 h-60 flex justify-center items-center relative"
  >
    <img src={imageURL} alt={`${title} logo`} class="w-24" />
  </div>
</div>
